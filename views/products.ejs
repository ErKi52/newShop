<!DOCTYPE html>
<html lang="de">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Produkte</title>
    <link rel="stylesheet" href="/styles/style.css" />
  </head>
  <body>
    <%- include('header') %>
    <main>
      <h1>Produkte</h1>

      <!-- Filterformular -->
      <form method="get" action="/products" class="filter-form">
        <label for="category">Kategorie:</label>
        <select name="category" id="category">
          <option value="">Alle Kategorien</option>
          <option value="electronics">Elektronik</option>
          <option value="jewelery">Schmuck</option>
          <option value="men's clothing">Herrenbekleidung</option>
          <option value="women's clothing">Damenbekleidung</option>
        </select>

        <label for="minPrice">Mindestpreis:</label>
        <input
          type="number"
          step="5.00"
          name="minPrice"
          id="minPrice"
          placeholder="0.00"
        />

        <label for="maxPrice">Höchstpreis:</label>
        <input
          type="number"
          step="5.00"
          name="maxPrice"
          id="maxPrice"
          placeholder="0.00"
        />

        <button type="submit">Filtern</button>
      </form>
      
      <!-- Sortierungs- und Resetformular -->
      <div class="sort-and-reset-container">
        <form method="get" action="/products" class="sort-form">
          <label for="sort">Sortieren nach:</label>
          <select name="sort" id="sort" onchange="this.form.submit()">
            <option value="">Keine Sortierung</option>
            <option value="asc" <%= sort === 'asc' ? 'selected' : '' %>>Preis aufsteigend</option>
            <option value="desc" <%= sort === 'desc' ? 'selected' : '' %>>Preis absteigend</option>
          </select>
          
          <!-- Versteckte Felder für die Filterparameter -->
          <input type="hidden" name="category" value="<%= category || '' %>" />
          <input type="hidden" name="minPrice" value="<%= minPrice || '' %>" />
          <input type="hidden" name="maxPrice" value="<%= maxPrice || '' %>" />
        </form>
        
        <!-- Reset-Button -->
        <form method="get" action="/products/reset" class="reset-form">
          <button type="submit" class="reset-button">Filter zurücksetzen</button>
        </form>
      </div>

      <div class="product-list">
        <% products.forEach(product => { %>
        <div class="product-card">
          <a href="/productDetail/<%= product.id %>">
            <img
              src="<%= product.image %>"
              alt="<%= product.name %>"
              class="product-image"
          /></a>
          <h2><%= product.name.substring(0, 50) %></h2>
          <p><%= product.description.substring(0, 70) + "..." %></p>
          <div class="price">
            Preis: <%= product.price.toFixed(2).replace(".", ",") %> €
          </div>
          <button
            class="fav-button"
            onclick="saveToFavorites(this)"
            data-product="<%= JSON.stringify(product) %>"
          >
            Merken
          </button>
          <button
            class="cart-button"
            onclick="saveToCart(this)"
            data-product="<%= JSON.stringify(product) %>"
          >
            Warenkorb
          </button>
        </div>
        <% }); %>
      </div>
    </main>
    <%- include('footer') %>
    <script src="/scripts/favorites.js"></script>
    <script src="/scripts/cart.js"></script>
  </body>
</html>
